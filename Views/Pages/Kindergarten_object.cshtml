                    @{  
                        string ContentPath = "/Content/img/objects/Kindergarten/gallery/";
                        var picturesSearchPattern = new System.Text.RegularExpressions.Regex(@"$(?<=\.(jpg|png|jpeg|gif))", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
                        string ContentServerPath = Server.MapPath(ContentPath);
                        var picturenames = Directory.GetFiles(ContentServerPath).Where(f => picturesSearchPattern.IsMatch(f)).OrderBy(f => f);
                        foreach (var picturename in picturenames)
                        {
                            <div><img src="@(ContentPath + Path.GetFileName(picturename))" alt="" /></div>
                        }
                        
                    }
